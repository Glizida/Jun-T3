<Window x:Name="window" x:Class="JunT3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JunT3"
        xmlns:viewModel="clr-namespace:JunT3.ViewModel"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel></viewModel:MainViewModel>
    </Window.DataContext>
    <Grid>
        <DataGrid AutoGenerateColumns="False" 
                  Height="auto" 
                  HorizontalAlignment="Left" 
                  Name="userDataGrid" 
                  VerticalAlignment="Top" 
                  Width="auto"
                  ItemsSource="{Binding Path=DataUser}"
                  >
            <DataGrid.Columns >
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Path=Key}" MinWidth="50" />
                <DataGridTextColumn Header="Срееднее количесво шагов" Binding="{Binding Path=}" MinWidth="50" />
                <DataGridTextColumn Header="Минимальное кол.во шагов" Binding="{Binding Path=B}" MinWidth="50" />
                <DataGridTextColumn Header="Максимальное кол.вщ шагов" Binding="{Binding Path=C}" MinWidth="50" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>